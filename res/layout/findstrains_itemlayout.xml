<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RadioGroup
		android:id="@+id/effect_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:orientation="horizontal"
		android:visibility="visible"
		app:layout_constraintBottom_toBottomOf="@+id/item_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/item_title">

		<RadioButton
			android:id="@+id/effect_ignore"
			android:layout_width="60sp"
			android:layout_height="20sp"
			android:layout_weight="1"
			android:background="@drawable/ignore_btn"
			android:button="@null" />

		<RadioButton
			android:id="@+id/effect_min"
			android:layout_width="60sp"
			android:layout_height="20sp"
			android:layout_weight="1"
			android:background="@drawable/min_button"
			android:button="@null" />

		<RadioButton
			android:id="@+id/effect_max"
			android:layout_width="60sp"
			android:layout_height="20sp"
			android:layout_weight="1"
			android:background="@drawable/max_button"
			android:button="@null" />
	</RadioGroup>


	<TextView
		android:id="@+id/item_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="500dp"
		android:layout_marginBottom="8dp"
		android:maxLines="3"
		android:text="text"
		android:textAlignment="viewStart"
		android:textColor="#444444"
		android:textSize="18sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/effect_group"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>